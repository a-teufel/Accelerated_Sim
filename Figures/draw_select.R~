library(ggplot2)
library(cowplot)
library(plyr)
library(reshape2)


lm_eqn <- function(df){

    eq <- substitute(~R~"="~r2, 
         list(
             r2 = format(cor(df$wf,df$mh), digits = 3)))
   
    as.character(as.expression(eq));                 
}

WF.files<-list.files(pattern="fix_rep*")
MH.files<-list.files(pattern="mh_rep*")
s_wf<-NULL
s_mh<-NULL

for( i in 1:3){
print(WF.files[i])
print(MH.files[i])
WF<-read.csv(file=WF.files[i],head=TRUE,sep=",")
MH<-read.csv(file=MH.files[i],head=TRUE,sep=",")


wf_score<-WF$Rosetta
wf_delta<-WF$Score

mh_score<-MH$Rosetta
mh_delta<-MH$Score


for(i in 2:500){
   #s_wf<-cbind(s_wf, wf_delta[i])
   #s_mh<-cbind(s_mh, mh_delta[i])
   wf_org<-wf_score[i]
   mh_org<-mh_score[i]

   wf_to<-wf_score[i+1]
   mh_to<-mh_score[i+1]

   wf_fit<-1/(exp(wf_org-wf_score[1]/2)+1)
   mh_fit<-1/(exp(mh_org-mh_score[1]/2)+1)

   print(wf_fit)

   wf_fit_to<-1/(exp(wf_to-wf_score[1]/2)+1)
   mh_fit_to<-1/(exp(mh_to-mh_score[1]/2)+1)

   s_wf<-c(s_wf, log(wf_fit_to)-log(wf_fit) )
   s_mh<-c(s_mh, log(mh_fit_to)-log(mh_fit) )
}


}
#print(s_wf)
#hist(s_wf,breaks=500)
#hist(s_mh,breaks=500)



ggplotColours <- function(n = 6, h = c(0, 360) + 15){
  if ((diff(h) %% 360) < 1) h[2] <- h[2] - 360/n
  hcl(h = (seq(h[1], h[2], length = n)), c = 100, l = 65)
}
ggcols=ggplotColours(n = 2)
cols <- c("Accelerated\nSampling"=ggcols[1],"Original\nSampling"=ggcols[2])

number_ticks <- function(n) {function(limits) pretty(limits, n)}


temp<-data.frame(wf=as.vector(as.numeric(s_wf)),mh=as.vector(as.numeric(s_mh)))
print(temp)

print(var(na.exclude(temp)$wf))
print(var(na.exclude(temp)$mh))

w<-na.exclude(temp)$wf
m<-na.exclude(temp)$mh

neu_w<- w[w<.01 & w>-.01]
neu_m<- m[m<.01 & m>-.01]

print(length(neu_w))
print(length(neu_m))

print(length(w))
print(length(m))

print(length(neu_w)/length(w))
print(length(neu_m)/length(m))

shapiro.test(w)
shapiro.test(m)

ks.test(w,m)$p.value

var(w)
var(m)
mean(w)
mean(m)
t.test(w,m)
var.test(w,m)


#scale_mh<-2*100*m
#scale_wf<-2*100*w

fr<-function(s){
	scale_mh<-s*m*2*100
        scale_wf<-w*2*100
        ans<-1-ks.test(scale_mh,scale_wf)$p.value
	return(ans)

}


print(fr(1.2))

optim(c(1.5),fr)

ks.test(w,m)
ks.test(w,m*1.525)

ks.test(w,m*1.6)


short<-ggplot(temp, aes(mh,fill="Accelerated\nSampling"))+geom_density(alpha=.5)+geom_density(aes(wf,fill="Original\nSampling"),alpha=.5)+theme(legend.justification = c(1, 1), legend.position = c(1, 1),legend.key.size = unit(2, 'lines'))+scale_fill_manual(name="",values=cols) +xlab("Selection Coefficient")+ylab("\nDensity")

temp<-data.frame(wf=sort(as.vector(as.numeric(s_wf))),mh=sort(as.vector(as.numeric(s_mh))))



q<- ggplot(data=temp, aes(x=(wf),y=(mh))) + geom_point()+geom_smooth(method="lm",formula = y ~ x,se=FALSE,colour="red")+ylim(-.026,.026)+xlim(-.026,.026)
q<-q+ylab("Selection Coefficient\nAccelerated Sampling")+xlab("Selection Coefficient Original Sampling")
#q<-q + annotate("text",x = 0, y = .02, label = lm_eqn(temp), parse = TRUE,size=5)
#q



pdf("protein_sc_qq.pdf", onefile=FALSE)
temp<-plot_grid(short,q,labels=c("A","B"),ncol=1,align='v')
temp
dev.off()

